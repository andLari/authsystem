<Window x:Class="variant3compservice.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:variant3compservice"
        mc:Ignorable="d"
        Title="Компьютерный сервис" Height="450" Width="600" ResizeMode="NoResize" Left="700" Top="300">
    <Grid>
        <Button Content="Войти" HorizontalAlignment="Center" VerticalAlignment="Center" Height="43" Width="160" Click="signin"/>
        <TextBox x:Name="logintextbox" HorizontalAlignment="Center" Margin="0,90,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" FontSize="16"/>
        <Label Content="Введите логин:" HorizontalAlignment="Left" Margin="116,86,0,0" VerticalAlignment="Top" FontSize="16"/>
        <Label Content="Введите пароль:" HorizontalAlignment="Left" Margin="106,136,0,0" VerticalAlignment="Top" FontSize="16"/>
        <Button Content="Зарегистрироваться" HorizontalAlignment="Center" Margin="0,253,0,0" VerticalAlignment="Top" Height="43" Width="160" Click="signup"/>
        <PasswordBox x:Name="passwordbox" HorizontalAlignment="Center" Margin="0,140,0,0" VerticalAlignment="Top" Width="120" FontSize="16"/>
    </Grid>
</Window>
