<Window x:Class="variant3compservice.ManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:variant3compservice"
        mc:Ignorable="d"
        Title="Личный кабинет Менеджера" Height="450" Width="800" ResizeMode="NoResize" Left="700" Top="300">
    <Grid>
        <Label x:Name="enteras" Content="Вы вошли как: " HorizontalAlignment="Left" Margin="68,21,0,0" VerticalAlignment="Top" FontSize="16"/>
        <Button Content="Выйти" HorizontalAlignment="Left" Margin="42,337,0,0" VerticalAlignment="Top" Height="45" Width="86" FontSize="16" Click="exit_button"/>
        <Button Content="Мастер добавления заявок" HorizontalAlignment="Center" Margin="0,64,0,0" VerticalAlignment="Top" FontSize="16" Height="49" Width="228" Click="add_request"/>
        <Button Content="Показать заявки/редактировать заявки" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="16" Height="49" Width="344" Click="checkedit_request" Margin="0,138,0,0"/>
        <Button Content="Посмотреть отчеты" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="16" Height="49" Width="228" Click="check_report" Margin="0,204,0,0"/>
    </Grid>
</Window>
